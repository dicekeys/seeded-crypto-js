{
    "compilerOptions": {
      "strict": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,  /* Disallow inconsistently-cased references to the same file. */
      "module": "commonjs",
      "target": "ES2020",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "rootDirs": ["src"],
      "baseUrl": "./src",
      "paths": {
        "*" : [
          "./node_modules/@types",
          "./node_modules/",
            "src/@types/*",
            "src",
            "src/tests"
        ],
        "~*": ["./src/*"]
      },
      "sourceMap": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "lib": ["node", "es2020", "webworker"]
  }